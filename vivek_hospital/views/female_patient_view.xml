<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_vivek_hospital_female_patient_tree" model="ir.ui.view">
        <field name="name">vivek_hospital.patient_tree</field>
        <field name="model">vivek.hospital.patient</field>
        <field name="arch" type="xml">
            <tree >
                <field name="name"/>
                <field name="dob"/>
                <field name="ref"/>
                <field name="tag_ids" widget="many2many_tags" options="{'color_field': 'color'}"/>
                <field name="age"/>
                <field name="gender"/>
            </tree>
            </field>
    </record>

    <record id="view_vivek_hospital_patient_form_f" model="ir.ui.view">
        <field name="name">vivek_hospital.patient_form</field>
        <field name="model">vivek.hospital.patient</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="dob"/>
                            <field name="age"/>
                        </group>
                        <group>
                            <field name="gender"/>
                            <field name="active" invisible="1"/>
                            <field name="ref"/>
                        </group>
                    </group>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" groups="base.group_user"/>
                    <field name="activity_ids"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>

     <record id="view_vivek_hospital_patient_search" model="ir.ui.view">
        <field name="name">vivek_hospital.patient_search</field>
        <field name="model">vivek.hospital.patient</field>
        <field name="arch" type="xml">
            <search>
                <field name="name" filter_domain="[('name','ilike',self)]"/>
                <field name="age"/>
                <field name="gender"/>
                <filter name="filter_male" string="Male" domain="[('gender','=','male')]"/>
                <filter name="filter_female" string="Female" domain="[('gender','=','female')]"/>
                <!-- <separator/>
                <filter name="filter_kids" string="kids" domain="[('age','&lt;=',12)]"/> -->
                <separator />
                <filter name="filter_archived" string="Not Active" domain="[('active','=',False)]"/>
                <group expand="0" string="Group">
                    <filter name="group_by_gender" string="Group by Gender" context="{'group_by':'gender'}"/>
                </group>
            </search>
            </field>
    </record>
    


    <record id="action_vivek_hospital_patient_female" model="ir.actions.act_window">
        <field name="name">Female Patient</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">vivek.hospital.patient</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="view_vivek_hospital_female_patient_tree"/>
        <field name="context">{'default_gender':'female','hide_gender': True}</field>
        <field name="domain">[('gender','=','female')]</field>  
        <field name="help" type="html">
            <p class="oe_view_nocontent_smilling_face">
                Click to create a new Female patient record.
            </p>
        </field>

    </record>
    <menuitem  id="menu_vivek_hospital_female" 
    name="Female Patients" 
    sequence="20"
    parent="menu_vivek_hospital_patient" 
    action="action_vivek_hospital_patient_female" />

</odoo>